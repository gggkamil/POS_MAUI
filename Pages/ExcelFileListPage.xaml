<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CashierApps.ExcelFileListPage">
    <CollectionView ItemsSource="{Binding ExcelFiles}">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <StackLayout Orientation="Horizontal">
                    <Label Text="{Binding FileName}" VerticalOptions="Center" />
                    <CheckBox IsChecked="{Binding IsSelected}" CheckedChanged="OnFileCheckedChanged"/>

                    <Button Text="Drukuj i zapisz"
                            Clicked="OnSaveButtonClicked"
                            VerticalOptions="End"
                            HorizontalOptions="FillAndExpand"
                            BackgroundColor="Green"
                            TextColor="White" />
                </StackLayout>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>