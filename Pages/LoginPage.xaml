<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ButchersCashier.Pages.LoginPage">
    <StackLayout Padding="20">
        <Label Text="Login" FontSize="24" HorizontalOptions="Center" />
        <Entry x:Name="UsernameEntry" Placeholder="Login" />
        <Entry x:Name="PasswordEntry" Placeholder="Hasło" IsPassword="True" />
        <Button Text="Login" Clicked="OnLoginClicked" Margin="0,20,0,0" MaximumHeightRequest="300" MaximumWidthRequest="300"  />
        <Button Text="Utwórz użytkownika" Clicked="OnRegisterClicked" Margin="0,5,0,0" MaximumHeightRequest="200" MaximumWidthRequest="200" />
    </StackLayout>
</ContentPage>