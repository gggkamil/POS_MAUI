<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CashierApp.AdminEditPage">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Close"
                     IconImageSource="close_icon.png"
                     Priority="0"
                     Order="Primary"
                     Clicked="OnCloseClicked"/>
    </ContentPage.ToolbarItems>
    <VerticalStackLayout Padding="10">
        <Label Text="Aktualizuj produkt" FontSize="24" />
        <Entry x:Name="ProductNameEntry" Placeholder="Product Name" />
        <Entry x:Name="ProductCategoryEntry" Placeholder="Category" />
        <Picker x:Name="QuantityTypePicker" Title="Select Quantity Type">
            <Picker.ItemsSource>
                <x:Array Type="{x:Type x:String}">
                    <x:String>Items</x:String>
                    <x:String>Kilograms</x:String>
                </x:Array>
            </Picker.ItemsSource>
        </Picker>
        <Entry x:Name="ProductImagePathEntry" Placeholder="Image Path" />
        <Entry x:Name="ProductPriceEntry" Placeholder="Price" Keyboard="Numeric" />
        <Button Text="Zapisz zmiany" Clicked="OnSaveChangesClicked" />
        <Label x:Name="ResultLabel" Text="" FontSize="20" TextColor="Green" />
    </VerticalStackLayout>
</ContentPage>